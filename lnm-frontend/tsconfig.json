{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "paths": {
      "*": ["*"],
      "@/*": ["src/*"], // Alias for the `src` folder
      "@styles/*": ["src/assets/styles/*"], // Alias for styles
      "@assets/*": ["src/assets/*"] // Alias for assets
    },
    "baseUrl": "src",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "noUnusedLocals": false, // Temporary fix, re-enable later
    "noUnusedParameters": false, // Temporary fix, re-enable later
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
