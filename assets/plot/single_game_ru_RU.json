								"knowledgeId": "mySuperior"
							}
						}
					]
				},
				"inception1_03": {
					"id": "inception1_03",
					"dialogue": "Слушаю вас, сэр!",
					"speaker": "steve",
					"nextFrame": "inception1_04"
				},
				"inception1_04": {
					"id": "inception1_04",
					"dialogue": "Это не телефонный разговор. Зайдите срочно ко мне в кабинет!",
					"speaker": "director",
					"nextFrame": "inception1_05",
					"effects": [
						{
							"type": "CHANGE_POSE",
							"args": {
								"characterId": "steve",
								"newPose": "idle"
							}
						}
					]
				},
				"inception1_05": {
					"id": "inception1_05",
					"dialogue": "Да, сэр!",
					"speaker": "steve",
					"nextFrame": "inception1_06"
				},
				"inception1_06": {
					"id": "inception1_06",
					"dialogue": "*клик*",
					"nextFrame": "inception1_07"
				},
